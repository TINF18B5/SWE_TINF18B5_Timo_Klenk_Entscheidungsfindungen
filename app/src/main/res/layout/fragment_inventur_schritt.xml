<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.inventur.schritt.InventurSchrittFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/label_inventur_schritt_lagerort_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="64dp"
            android:text="@string/label_name"
            app:layout_constraintEnd_toEndOf="@id/label_inventur_schritt_lagerort_beschreibung"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/content_inventur_schritt_lagerort_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:text="@string/label_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/label_inventur_schritt_lagerort_name"
            app:layout_constraintTop_toTopOf="@id/label_inventur_schritt_lagerort_name" />


        <TextView
            android:id="@+id/label_inventur_schritt_lagerort_beschreibung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_beschreibung"
            app:layout_constraintStart_toStartOf="@id/label_inventur_schritt_lagerort_name"
            app:layout_constraintTop_toBottomOf="@id/label_inventur_schritt_lagerort_name" />

        <TextView
            android:id="@+id/content_inventur_schritt_lagerort_beschreibung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_beschreibung"
            app:layout_constraintEnd_toEndOf="@id/content_inventur_schritt_lagerort_name"
            app:layout_constraintStart_toStartOf="@id/content_inventur_schritt_lagerort_name"
            app:layout_constraintTop_toTopOf="@id/label_inventur_schritt_lagerort_beschreibung" />

        <TextView
            android:id="@+id/label_inventur_schritt_gegenstandstyp_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_name"
            app:layout_constraintEnd_toEndOf="@id/label_inventur_schritt_lagerort_beschreibung"
            app:layout_constraintStart_toStartOf="@id/label_inventur_schritt_lagerort_beschreibung"
            app:layout_constraintTop_toBottomOf="@id/label_inventur_schritt_lagerort_beschreibung" />

        <TextView
            android:id="@+id/content_inventur_schritt_gegenstandstyp_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_name"
            app:layout_constraintEnd_toEndOf="@id/content_inventur_schritt_lagerort_beschreibung"
            app:layout_constraintStart_toStartOf="@id/content_inventur_schritt_lagerort_beschreibung"
            app:layout_constraintTop_toTopOf="@id/label_inventur_schritt_gegenstandstyp_name" />

        <TextView
            android:id="@+id/label_inventur_schritt_gegenstandstyp_beschreibung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_beschreibung"
            app:layout_constraintEnd_toEndOf="@id/label_inventur_schritt_gegenstandstyp_name"
            app:layout_constraintStart_toStartOf="@id/label_inventur_schritt_gegenstandstyp_name"
            app:layout_constraintTop_toBottomOf="@id/label_inventur_schritt_gegenstandstyp_name" />

        <TextView
            android:id="@+id/content_inventur_schritt_gegenstandstyp_beschreibung"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_beschreibung"
            app:layout_constraintEnd_toEndOf="@id/content_inventur_schritt_gegenstandstyp_name"
            app:layout_constraintStart_toStartOf="@id/content_inventur_schritt_gegenstandstyp_name"
            app:layout_constraintTop_toTopOf="@id/label_inventur_schritt_gegenstandstyp_beschreibung" />

        <Button
            android:id="@+id/button_inventur_schritt_zuruck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="32dp"
            android:text="@string/button_zuruck"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_inventur_schritt_bestatigen"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_inventur_schritt_bestatigen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:text="@string/button_bestatigen"
            app:layout_constraintBottom_toBottomOf="@id/button_inventur_schritt_zuruck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_inventur_schritt_zuruck"
            app:layout_constraintTop_toTopOf="@id/button_inventur_schritt_zuruck" />

        <TextView
            android:id="@+id/label_inventur_schritt_gegenstand_menge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/label_menge"
            android:labelFor="@id/content_inventur_schritt_gegenstand_menge"
            app:layout_constraintBottom_toBottomOf="@id/content_inventur_schritt_gegenstand_menge"
            app:layout_constraintEnd_toEndOf="@id/label_inventur_schritt_gegenstandstyp_beschreibung"
            app:layout_constraintStart_toStartOf="@id/label_inventur_schritt_gegenstandstyp_beschreibung"
            app:layout_constraintTop_toTopOf="@id/content_inventur_schritt_gegenstand_menge" />

        <EditText
            android:id="@+id/content_inventur_schritt_gegenstand_menge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="32dp"
            android:importantForAutofill="no"
            android:inputType="number"
            app:layout_constraintBottom_toTopOf="@id/button_inventur_schritt_bestatigen"
            app:layout_constraintEnd_toEndOf="@id/button_inventur_schritt_bestatigen"
            app:layout_constraintStart_toEndOf="@id/label_inventur_schritt_gegenstand_menge" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>